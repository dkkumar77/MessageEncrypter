<GridPane alignment="center" hgap="10" prefHeight="500.0" prefWidth="600.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="Model.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #cceaf0;">
         <children>
            <JFXButton fx:id="clear" layoutX="222.0" layoutY="382.0" onAction="#handleClear" style="-fx-background-color: aed1eb;" text="Clear" />
            <JFXButton fx:id="send" layoutX="331.0" layoutY="382.0" onAction="#handleSend" style="-fx-background-color: aed1eb;" text="Send" />
            <JFXButton fx:id="recieve" layoutX="270.0" layoutY="446.0" onAction="#handleReceive" style="-fx-background-color: aed1eb;" text="Recieve" />
            <JFXTextArea fx:id="message" layoutX="71.0" layoutY="95.0" opacity="0.45" prefHeight="274.0" prefWidth="459.0" promptText="Type in Message" style="-fx-background-color: aed1eb;" unFocusColor="#aed1eb" />
            <JFXButton fx:id="submit" layoutX="518.0" layoutY="459.0" onAction="#handleSubmit" style="-fx-background-color: aed1eb;" text="Submit" />
            <Label alignment="CENTER" layoutX="130.0" layoutY="40.0" prefHeight="20.0" prefWidth="340.0" text="Message Encrypter" wrapText="true">
               <font>
                  <Font name="Courier Bold" size="18.0" />
               </font>
            </Label>
            <JFXButton fx:id="close" layoutX="536.0" layoutY="36.0" onAction="#handleClose" style="-fx-background-color: aed1eb;" text="Close" />
            <JFXButton fx:id="setting" layoutX="14.0" layoutY="459.0" onAction="#handleSettings" prefHeight="0.0" prefWidth="63.0" style="-fx-background-color: aed1eb;" text="Settings" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
