<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXButton?>
<?import com.jfoenix.controls.JFXTextArea?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.RowConstraints?>
<?import javafx.scene.text.Font?>

<GridPane alignment="center" hgap="10" prefHeight="401.0" prefWidth="404.0" vgap="10" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.Controller">
   <columnConstraints>
      <ColumnConstraints />
   </columnConstraints>
   <rowConstraints>
      <RowConstraints />
   </rowConstraints>
   <children>
      <AnchorPane prefHeight="500.0" prefWidth="600.0" style="-fx-background-color: #d0b7b7;">
         <children>
            <JFXButton fx:id="send" layoutX="35.0" layoutY="65.0" onAction="#handleSend" text="Send" />
            <JFXButton fx:id="recieve" layoutX="27.0" layoutY="113.0" onAction="#handleRecieve" text="Recieve" />
            <JFXTextArea fx:id="message" labelFloat="true" layoutX="89.0" layoutY="65.0" prefHeight="193.0" prefWidth="302.0" promptText="Type in Message" />
            <JFXButton fx:id="submit" layoutX="309.0" layoutY="302.0" onAction="#handleSubmit" text="Submit" />
            <Label alignment="CENTER" layoutX="35.0" layoutY="25.0" prefHeight="19.0" prefWidth="340.0" text="Shahbaj and Deepak's Message Encrypter" wrapText="true">
               <font>
                  <Font size="15.0" />
               </font>
            </Label>
            <JFXButton fx:id="close" layoutX="348.0" layoutY="1.0" onAction="#handleClose" text="Close" />
         </children>
      </AnchorPane>
   </children>
</GridPane>
